# Database Configuration (Supabase)
# Client-side (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Server-side only (never exposed to browser)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DB_PASSWORD=your_database_password

# Temporal Configuration
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=freight-delay-notifications
TEMPORAL_API_KEY=                 # For Temporal Cloud authentication (leave empty for local dev)

# Worker Versioning (for zero-downtime deployments)
# Only enable if running multiple worker versions simultaneously
# Requires additional workflow start configuration (currently not implemented)
TEMPORAL_WORKER_VERSIONING=false  # Keep disabled unless you need zero-downtime deployments
TEMPORAL_WORKER_BUILD_ID=         # Optional: Override auto-detected git hash (for CI/CD)

# OpenAI Configuration (Required for AI message generation)
OPENAI_API_KEY=your_openai_api_key
# Model is fixed to gpt-4o-mini as per exercise requirements
OPENAI_MODEL=gpt-4o-mini

# Traffic API Configuration (At least one required)
# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Mapbox API (Fallback for traffic data)
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token

# Notification Services (At least one required)
# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Freight Delay Notifications

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_PHONE=+1234567890

# Test User Configuration (for development and testing)
TEST_EMAIL=test@example.com
TEST_PHONE=+1234567890
TEST_NAME=Test User

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Cron Job Configuration (Required for automated traffic monitoring)
CRON_SECRET=your_random_secret_key_for_cron_jobs
CRON_INTERVAL_SECONDS=10  # Use 10 for testing (10 seconds), 600 for production (10 minutes)